  <script src="https://kit.fontawesome.com/05c6b543c0.js" crossorigin="anonymous"></script>
  <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
  <script src="https://unpkg.com/leaflet.markercluster@1.3.0/dist/leaflet.markercluster.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>
  <script type="text/javascript"
    src="https://cdn.jsdelivr.net/gh/hosuaby/Leaflet.SmoothMarkerBouncing@v2.0.0/dist/bundle.js"
    crossorigin="anonymous"></script>
  <script src="/js/howler.core.js"></script>
</head>

<body>
  {{#if loggedIn}}
  <div id="map"></div>
  <i id="menubtn" class="fas fa-bars menuBar"
    style="cursor:pointer;position:absolute;top:20px;left:25px;width:50px;display:none;"
    onclick="$('#menu').show()"></i>
  <div id="menu">
    <h1 class="dashTitle" style="margin-left:10px">MY FRONTYARD</h1>
    <i id="menuclosebtn" class="fas fa-times menuCloseBtn"></i>
    <hr style="width:100%;text-align:center;opacity:0.2">

    <div style="width:100%" class="navIcon">
      {{#if registered}}
      <a href="/dashboard/create/" class="navbar-item">
        <i id='register' class='fas fa-house-user menubtn'></i></a>
      {{else}}
      <a href="/dashboard/create/" class="navbar-item"><i id='register' class='fas fa-house-user menubtn'></i>
      </a>
      {{/if}}
      <a href="/dashboard/" class="navbar-item"><i id="search" class="far fa-heart menubtn"></i>
      </a>
      <a href="/dashboard/search/" class="navbar-item"><i id="search" class="fas fa-search-location menubtn"></i>
      </a>
      <i id="logout" class="fas fa-sign-out-alt menubtn"></i>
    </div>
    <br />
    <div id="message"
      style="font:16px arial;color:black;text-align:center;background-color: #94dbd4;border-radius: 10px"></div>
    <br />
    <main class="main">
      {{{body}}}
    </main>
  </div>
  {{else}}
  <div class="split-screen" id="loginSec">
    <div class="left">
      <section class="copy">
        <h1>MY FRONTYARD</h1>
        <p>
          The perfect place to find events at properties near you!
        </p>
        <a href="/login"><button class="start-btn">BEGIN</button></a>
      </section>
    </div>
    <div class="right">
      <div class="rightSection">
        <h1 class="welcome-txt">Welcome</h1>
        {{{body}}}
        </form>
      </div>
    </div>
    {{/if}}
    {{#if loggedIn}}
    <script src="/js/logout.js"></script>
    <script src="/js/index.js"></script>
    {{else}}
    {{/if}}

</body>

</html>